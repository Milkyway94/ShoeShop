 @{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
@model PagedList.IPagedList<Models.EF.NhomSanPham>
@using PagedList.Mvc;
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Quản lý danh mục <a href="/admin/Nhomsanpham/Insert" class="btn btn-success">Thêm Danh mục mới</a></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="top-tbl-page">
                        <form class="form-group form-inline" action="?act=process" method="post">
                            <select class="form-control" name="sl_process">
                                <option>
                                    Tác vụ
                                </option>
                                <option>
                                    Chỉnh sửa
                                </option>
                                <option>
                                    Xóa
                                </option>
                            </select>
                            <input type="submit" class="btn btn-primary" value="Áp dụng" />
                            <select class="form-control" name="sl_date">
                                <option>
                                    1 tuần qua
                                </option>
                                <option>
                                    1 tháng qua
                                </option>
                                <option>
                                    Năm qua
                                </option>
                            </select>
                            <input type="submit" class="btn btn-primary" value="Áp dụng" />
                        </form>
                    </div>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th class="text-center"><input class="form-control" type="checkbox" name="ck_allCheck" /></th>
                                <th class="text-center">Tên</th>
                                <th class="text-center">Ngày tạo</th>
                                <th class="text-center">Tác giả</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td><input class="form-control" type="checkbox" name="ck_checkPage" /></td>
                                    <td>
                                        <div class="w-100">@item.Name</div>
                                        <div class="w-100">
                                            <ul>
                                                <li><a href="">Chỉnh sửa</a></li>
                                                <li>|</li>
                                                <li>@Ajax.ActionLink("Xóa","Delete", new { @id=item.Id}, new AjaxOptions { Confirm="Bạn có thực sự muốn xóa không?", OnComplete= "$('#row_"+item.Id+"').remove()", HttpMethod="Delete" })</li>
                                                <li>|</li>
                                                <li><a href="?atc=see">Xem</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                    <td>@item.CreateDate</td>
                                    <td>@item.CreateBy</td>
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                   @Html.PagedListPager(Model, page=> Url.Action("Index", new { page}))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


