 @{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
@model PagedList.IPagedList<Models.EF.NhomSanPham>
@using PagedList.Mvc;
<script src="~/Assets/admin/bower_components/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function() {
        $('#ck_allCheck').click(function(event) {  //on click
            if(this.checked) { // check select status
                $('.checkbox1').each(function() { //loop through each checkbox
                    this.checked = true;  //select all checkboxes with class "checkbox1"
                });
            }else{
                $('.checkbox1').each(function() { //loop through each checkbox
                    this.checked = false; //deselect all checkboxes with class "checkbox1"
                });
            }
        });

        $("#delete").click(function () {
            var selectedIDs = new Array();
            $('input:checkbox.checkbox1').each(function () {
                if ($(this).prop('checked')) {
                    selectedIDs.push($(this).val());
                }
            });

            var options = {};
            options.url = "/NhomSanPham/Delete";
            options.type = "POST";
            options.data = JSON.stringify(selectedIDs);
            options.contentType = "application/json";
            options.dataType = "json";
            options.success = function (msg) {
                alert(msg);
            };
            if (confirm("Bạn có thực sự muốn xóa những danh mục đã chọn không?")) {
                $.ajax(options);
            }
            for (var i = 0; i < selectedIDs.length; i++) {
                $("#row_" + selectedIDs[i]).remove();
            }
        });
    });
</script>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Quản lý danh mục @Html.ActionLink("Thêm Danh mục mới","Create", "NhomSanPham", new {@class="btn btn-success" })</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row" style="padding-bottom: 20px;">
                    <div class="top-tbl-page">
                        <div class="col-md-4">
                            <button id="delete" class="btn btn-danger">Xóa danh mục đã chọn</button>
                        </div>
                        <div class="col-sm-8">
                            @using (Html.BeginForm("Index", "NhomSanPham", FormMethod.Get))
                            {
                                    <div class="col-md-4"></div>
                                    <div class="col-md-6 text-right" style="padding-right: 0px;">
                                        <input type="text" class="form-control" name="searchKey" />
                                    </div>
                                    <div class="col-sm-2"  style="padding-left: 0px;">
                                        <input type="submit" class="btn btn-primary" value="Tìm kiếm" />
                                    </div>
                              }
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th class="text-center"><input class="form-control" type="checkbox" name="ck_allCheck" id="ck_allCheck" /></th>
                                <th class="text-center">STT</th>
                                <th class="text-center">Tên</th>
                                <th class="text-center">Ngày tạo</th>
                                <th class="text-center">Tác giả</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            @{int i = 0;}
                            @if (Model!=null)
                            {
                                    foreach (var item in Model)
                                    {
                                    i++;
                                    <tr class="odd gradeX" id="row_@item.Id">
                                        <td style="width: 40px;"><input class="form-control checkbox1" type="checkbox" value="@item.Id" /></td>
                                        <td>@i</td>
                                        <td>
                                            <div class="w-100"><a class="btn-link h3 alert-link" href="/admin/NhomSanPham/Edit/@item.Id">@item.Name</a></div>
                                            <div class="w-100">
                                                <ul>
                                                    <li><a href="/admin/NhomSanPham/Edit/@item.Id">Chỉnh sửa</a></li>
                                                    <li>|</li>
                                                    <li>@Ajax.ActionLink("Xóa", "Delete", new { @id = item.Id }, new AjaxOptions {
                                                       Confirm= "Bạn có thực sự muốn xóa không?",
                                                       OnComplete= "$(#row_"+item.Id+"').remove()",
                                                       HttpMethod="Delete"
                                                   })                                                    
                                                    <li>|</li>
                                                    <li><a href="?atc=see">Xem</a></li>
                                                </ul>
                                            </div>
                                        </td>
                                        <td>@item.CreateDate.Value.ToString("dd/MM/yyyy")</td>
                                        <td>@item.CreateBy</td>
                                    </tr>

                                }
                            }
                            else
                            {
                                <tr><td colspan="4" class="danger">Không có danh mục nào!</td></tr>
                            }
                        </tbody>
                    </table>
                    @if(Model!=null)
                    {
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    }
                </div>

                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


