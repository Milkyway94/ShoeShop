@{
    ViewBag.Title = "Quản lý trang";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Quản lý trang <a href="/admin/AdminHome/AddPage" class="btn btn-success">Thêm trang mới</a></h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="top-tbl-page">
                                    <form class="form-group form-inline" action="?act=process" method="post">
                                        <select class="form-control" name="sl_process">
                                            <option>
                                                Tác vụ
                                            </option>
                                            <option>
                                                Chỉnh sửa
                                            </option>
                                            <option>
                                                Xóa
                                            </option>
                                        </select>
                                        <input type="submit" class="btn btn-default" value="Áp dụng" />
                                        <select class="form-control" name="sl_date">
                                            <option>
                                                1 tuần qua
                                            </option>
                                            <option>
                                               1 tháng qua
                                            </option>
                                            <option>
                                               Năm qua
                                            </option>
                                        </select>
                                        <input type="submit" class="btn btn-default" value="Áp dụng" />
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th class="text-center"><input class="form-control" type="checkbox" name="ck_allCheck" /></th>
                                            <th class="text-center">Tiêu đề</th>
                                            <th class="text-center">Tác giả</th>
                                            <th class="text-center">Ngày đăng</th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-center">
                                        <tr class="odd gradeX">
                                            <td><input class="form-control" type="checkbox" name="ck_checkPage" /></td>
                                            <td>
                                                <div class="w-100">Liên hệ cửa hàng</div>
                                                <div class="w-100">
                                                    <ul>
                                                        <li><a href="?atc=edit">Chỉnh sửa</a></li>
                                                        <li>|</li>
                                                        <li><a href="?atc=del">Xóa</a></li>
                                                        <li>|</li>
                                                        <li><a href="?atc=see">Xem</a></li>
                                                    </ul>
                                                </div>
                                            </td>
                                            <td>Internet Explorer 4.0</td>
                                            <td>Win 95+</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="~/Assets/admin/bower_components/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Assets/admin/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Assets/admin/bower_components/metisMenu/dist/metisMenu.min.js"></script>

    <!-- DataTables JavaScript -->
    <script src="~/Assets/admin/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/Assets/admin/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/Assets/admin/dist/js/sb-admin-2.js"></script>
    <!--sb-admin.js-->
    
